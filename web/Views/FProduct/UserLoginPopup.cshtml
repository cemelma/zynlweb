<style>
    .modal-footer {
        text-align:center;
    }
</style> 
 @using (Html.BeginForm("Prices", "FProduct", FormMethod.Post))
            {
 <div class="modal-dialog" style="width:650px;">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Lütfen Bilgilerinizi Giriniz</h4>
      </div>
      <div class="modal-body" style="position:relative;padding:0px;">

          <div class="col-md-12 sectionContent page uyelikPage">
              <div class="pageContent">
                  <div class="col-md-6">
                      <h3>Kayıtlı E-Posta Kullan</h3>
                      <div class="col-md-5">E-Posta Adresi:</div>
                      <div class="col-md-7"><input type="text" style="width:100%"></div>
                      <div class="col-md-5"></div>
                      <div class="col-md-7"><input type="button" value="Giriş"></div>
                  </div>

                  <div class="col-md-6">
                      <h3>Ya da Bilgilerinizi Gönderin</h3>
                      <div class="col-md-4">
                          Ad-Soyad:
                      </div>
                      <div class="col-md-8">
                          <input type="text" style="width:100%">
                      </div>
                      <div class="col-md-4">
                          Şirket:
                      </div>
                      <div class="col-md-8">
                          <input type="text" style="width:100%">
                      </div>
                      <div class="col-md-4">
                          Adres:
                      </div>
                      <div class="col-md-8">
                          <textarea style="margin: 0px 0px 10px; width: 100%; height: 68px;"></textarea>
                      </div>
                      <div class="col-md-4">
                          Telefon:
                      </div>
                      <div class="col-md-8">
                          <input type="text" style="width:100%">
                      </div>
                      <div class="col-md-4">
                          Cep Tel:
                      </div>
                      <div class="col-md-8">
                          <input type="text" style="width:100%">
                      </div>
                      <div class="col-md-4">
                          Fax:
                      </div>
                      <div class="col-md-8">
                          <input type="text" style="width:100%">
                      </div>
                      <div class="col-md-4">
                          E-Posta:
                      </div>
                      <div class="col-md-8">
                          <input type="password" style="width:100%">
                      </div>
                      <div class="col-md-4">
                      </div>
                      <div class="col-md-8">
                          <input type="button" value="Üye Ol">
                      </div>
                  </div>
        
      </div>
    </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
        <button type="submit" class="btn btn-primary">Göster</button>
      </div>
    </div>
  </div>
     
 }
