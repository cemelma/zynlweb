<table class="table no-border tablesorter">
    <thead>
        <tr>
            <th>Kod</th>
            <th>Malzeme</th>
            <th>Birim</th>
            <th>Ebat</th>
            <th>Ağırlık</th>
            @*<th>Renk</th>*@
            <th>Fiyat</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Details != null)
        {
            foreach (var item in ViewBag.Details)
            {
             <tr id="listItem_@item.DetailId"  class="handle">
                <td>@item.Code</td>
                <td>@item.Material</td>
                <td>@item.Unit</td>
                <td>@item.Dimension</td>
                <td>@item.Weight</td>
                 @*<td>@item.ColorName</td>*@
                 <td>@item.Price</td>
                 <td class="center">
                      <img id="DeleteImage_@item.DetailId"  src="/Areas/Admin/Content/images/icons/16/delete.png" class="cursorpointer"  title="Sil" onclick="DeleteRecord('/Product/DeleteDetail',@item.DetailId)" />
                    </td>
            </tr>
            }
        }
        else
        {
            <tr><td colspan="6">Kayıt Bulunamadı</td></tr>
        }
    </tbody>
</table>
